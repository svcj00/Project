                    elif row[3] == "Action":
                        action[4] += x
                    elif row[3] == "Comedy":
                        comedy[4] += x
                elif date[0] == '6':
                    tickets_each_month[5] += x
                    if row[3] == "Drama":
                        drama[5] += x
                    elif row[3] == "Horror":
                        horror[5] += x
                    elif row[3] == "Action":
                        action[5] += x
                    elif row[3] == "Comedy":
                        comedy[5] += x                    
                elif date[0] == '7':
                    tickets_each_month[6] += x
                    if row[3] == "Drama":
