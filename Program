        months_line = months
        print(f'Most movies released ({counts.get(j)}) in {month}')
        j = max(tickets_each_month)
        if j == tickets_each_month[0]:
            month = 'January'
        elif j == tickets_each_month[1]:
            month = 'February'
        elif j == tickets_each_month[2]:
            month = 'March'
